<UserControl x:Class="tani_keisan.CreditInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tani_keisan"
             mc:Ignorable="d"
             Height="24"
             Margin="0 6 0 6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="tb" Grid.Column="0" Text="{Binding Text, ElementName=root}" Margin="0 0 12 0" />
        <TextBox x:Name="input" Grid.Column="1" TextChanged="TextChanged" Margin="0 0 12 0" />
    </Grid>
</UserControl>
