<Window x:Class="tani_keisan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tani_keisan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Button Content="位置" HorizontalAlignment="Left" Margin="209,430,0,0" Height="20" VerticalAlignment="Top" Click="Button_Click_1">
            <!-- solution:https://www.web-dev-qa-db-ja.com/ja/wpf/%E5%B7%A6%E3%82%AF%E3%83%AA%E3%83%83%E3%82%AF%E3%81%A7%E3%81%AEwpf%E3%82%B3%E3%83%B3%E3%83%86%E3%82%AD%E3%82%B9%E3%83%88%E3%83%A1%E3%83%8B%E3%83%A5%E3%83%BC/970529297/-->
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Click">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Style.Triggers>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="右上"></MenuItem>
                                <MenuItem Header="左上"></MenuItem>
                                <MenuItem Header="右下"></MenuItem>
                                <MenuItem Header="左下"></MenuItem>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button Content="天気予報設定" HorizontalAlignment="Left" Margin="237,430,0,0" Height="20" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Button Content="単位登録" HorizontalAlignment="Left" Margin="313,430,0,0" Width="55" Height="20" VerticalAlignment="Top" Click="Button_Click_3"/>
        <Button Content="終了" HorizontalAlignment="Right" Height="20" Margin="0,430,0,0" VerticalAlignment="Top" Width="32" Click="Button_Click_4"/>
    </Grid>

</Window>
