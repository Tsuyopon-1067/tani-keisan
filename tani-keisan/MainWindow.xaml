<Window x:Class="tani_keisan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tani_keisan" xmlns:behaviors="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" WindowStyle="None" ResizeMode="CanResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="24px"/>
        </Grid.RowDefinitions>
        <!-- 時計ここから -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.ColumnSpan="2" Margin="0,0,0,47" Grid.RowSpan="2">
                <TextBlock 
                x:Name = "clock" 
                Text="00:00:00"  
                FontFamily="Arial"
                Margin="6" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                FontSize="48" 
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2" />
            </Viewbox>
            <Viewbox Grid.Row="1">
                <TextBlock 
                    Text="00:00:00"  
                    FontFamily="Arial"
                    Margin="6" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                    FontSize="20" 
                    Grid.Row="1"
                    Grid.Column="0" />
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="1">
                <TextBlock 
                x:Name = "date" 
                Text="0000/00/00"  
                FontFamily="Arial"
                Margin="6" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                FontSize="20" 
                Grid.Row="1"
                Grid.Column="1" />
            </Viewbox>
        </Grid>
        <!-- 時計ここまで -->

        <!-- 単位計算ここから -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- 左右に分割されてる5行 -->
            <Viewbox Grid.Column="0" Grid.Row="0">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="教養" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="0" Grid.Row="1">
                <TextBlock x:Name="kyouyouA" Grid.Row="1" Grid.Column="0" Text="教養A 0/2" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="0" Grid.Row="2">
                <TextBlock x:Name="kyouyouB" Grid.Row="2" Grid.Column="0" Text="教養A 0/2" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="0" Grid.Row="3">
                <TextBlock x:Name="gakusaiA" Grid.Row="3" Grid.Column="0" Text="教養A 0/2" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="0" Grid.Row="4">
                <TextBlock x:Name="kyouyouSum" Grid.Row="4" Grid.Column="0" Text="教養A 0/2" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="0">
                <TextBlock Grid.Row="0" Grid.Column="1" Text="専門" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="1">
                <TextBlock x:Name="specialA" Grid.Row="1" Grid.Column="1" Text="必修0/64" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="2">
                <TextBlock x:Name="specialB" Grid.Row="2" Grid.Column="1" Text="選必0/16" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="3">
                <TextBlock x:Name="specialC" Grid.Row="3" Grid.Column="1" Text="選択0/6" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="4">
                <TextBlock x:Name="specialSum" Grid.Row="4" Grid.Column="1" Text="合計0/86" FontSize="20" />
            </Viewbox>
            <!-- 下の2行 -->
            <Viewbox Grid.Row="5" Grid.ColumnSpan="2">
                <TextBlock x:Name="creditFree" Grid.Row="5" Grid.ColumnSpan="2" Text="自由科目 0/10" FontSize="20" />
            </Viewbox>
            <Viewbox Grid.Row="6" Grid.ColumnSpan="2">
                <TextBlock x:Name="creditSum" Grid.Row="6" Grid.ColumnSpan="2" Text="合計0/124" FontSize="20" />
            </Viewbox>
        </Grid>
        <!-- 単位計算ここまで -->

        <!-- 下部メニューバーここから -->
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Background="#FECFF8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="OpenContextMenu">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="位置" Padding="4" Background="Transparent"
                                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       MouseLeave="ButtomButton_MouseLeave" MouseEnter="ButtomButton_MouseEnter" />
                        </ControlTemplate>
                    </Button.Template>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="右上" Click="Change_Pos" />
                            <MenuItem Header="左上" Click="Change_Pos" />
                            <MenuItem Header="右下" Click="Change_Pos" />
                            <MenuItem Header="左下" Click="Change_Pos" />
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="天気予報設定" Padding="4" Background="Transparent"
                                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       MouseLeave="ButtomButton_MouseLeave" MouseEnter="ButtomButton_MouseEnter" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="単語登録" Padding="4" Background="Transparent" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       MouseLeave="ButtomButton_MouseLeave" MouseEnter="ButtomButton_MouseEnter" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Click="QuitButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="終了" Padding="4" Background="Transparent" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       MouseLeave="ButtomButton_MouseLeave" MouseEnter="ButtomButton_MouseEnter" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
